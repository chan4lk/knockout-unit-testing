/**
Need to run chrome with these flags in order for debugger to work.
"C:\Program Files (x86)\Google\Chrome\Application\chrome.exe" --allow-file-access-from-files --remote-debugging-port=9222
**/
{
    "version": "0.2.0",

    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Karma",
            "program": "${workspaceRoot}/node_modules/karma/bin/karma",
            "args": [
                "start",
                "${workspaceRoot}/karma.conf.js"
            ]
        },
        // {
        //     "name": "Launch Chrome against localhost, with sourcemaps",
        //     "type": "chrome",
        //     "request": "launch",
        //     "url": "http://localhost:3000",
        //     "sourceMaps": true,
        //     "webRoot": "${workspaceRoot}"
        // },        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Karma Chrome",
            "address": "localhost",
            "port": 9333,
            "sourceMaps": true,
            "pathMapping": {
                "/": "${workspaceRoot}",
                "/base/": "${workspaceRoot}/"
            }
        }
    ]
}